//Criar uma postagem
POST https://projeto-back-end-loadingjr.onrender.com/CriarPostagem

//Token
Authorization:Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VybmFtZSI6ImdlaWxtYSIsInBlcm1pc3Npb24iOjAsImlhdCI6MTcxNjQ5NjY3MywiZXhwIjoxNzE2NTAwMjczfQ.i6CtpajrB9PCy3PBmgBGrZSVWBlrsqMAgnwIDV7lRtg

//Request body
    {
        "title":"Titulo do post",
        "description":"Descrição da postagem",
        "post_type": "Tipo da postagem (edital, notícia, divulgação)",
        "imagem": "Imagem (Opicional)"
    }


